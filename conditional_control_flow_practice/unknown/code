#include <iostream>

float calculateShipping(float weight, float productPrice, int option)
{
    float shippingPrice = productPrice * 0.10f;

    if (weight > 25)
    {
        shippingPrice += 2.25f;

        switch (option)
        {
            case 1:
                shippingPrice += 0.3f;
                break;
            case 2:
                shippingPrice += 0.5f;
                break;
            case 3:
                shippingPrice += 1.75f;
                break;
            default:
                break;
        }
    }

    return shippingPrice;
}

int main()
{
    float weight = 27.6f;
    float priceOfProduct = 21.99f;
    int option = 2;
    float finalShippingPrice = calculateShipping(weight, priceOfProduct, option);
    std::cout << "Final shipping price: $" << finalShippingPrice << std::endl;
    return 0;
}