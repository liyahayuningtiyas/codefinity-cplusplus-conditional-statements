#include <iostream>

double performOperation(int type, double a, double b) {
    switch (type) 
    {
        case 1: return a + b;
        case 2: return a - b;
        case 3: return a * b;
        case 4: 
            if (b == 0)
            {
                std::cout << "Error: Division by zero" << std::endl;
                return 0;
            }
            return a / b;
        default:
            std::cout << "Invalid operation type" << std::endl;
            return 0;
    }
}

int main()
{
    double x = 12.0, y = 4.0;
    int op = 3; // 1-Add, 2-Subtract, 3-Multiply, 4-Divide
    std::cout << "Result: " << performOperation(op, x, y) << std::endl;
    return 0;
}