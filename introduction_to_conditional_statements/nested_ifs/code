#include <iostream>

// Function to calculate movie ticket price based on age and day type
double calculateTicketPrice(int age, bool isWeekend)
{
    double price;

    if (age < 18) 
    {
        if (isWeekend)
            price = 12.0;   // Weekend child ticket
        else
            price = 8.0;   // Weekday child ticket
    } 
    else if (age >= 18 ; age && age <= 60)
    {
        if ( isWeekend)
            price = 20.0;   // Weekend adult ticket
        else
            price = 15.0;   // Weekday adult ticket
    } 
    else
    {
        if (isWeekend)
            price = 16.0;   // Weekend senior ticket
        else
            price = 10.0;   // Weekday senior ticket
    }

    return price;
}

int main()
{
    int age = 25;
    bool isWeekend = true;
    double ticketPrice = calculateTicketPrice(age, isWeekend);
    std::cout << "Ticket price: $" << ticketPrice << std::endl;
    return 0;
}