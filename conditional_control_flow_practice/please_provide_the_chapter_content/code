#include <iostream>
#include <string>

// Function that calculates the total order price and applies discount if applicable
double calculateTotalOrder(const std::string items[], int n)
{
    double total = 0.0;

    for (int i = 0; i < n; i++)
    {
        if (items[i] == "Burger")
            total += 5.0;
        else if (items[i] == "Pizza")
            total += 8.0;
        else if (items[i] == "Hot dog")
            total += 4.0;
    }

    // Apply 10% discount if total exceeds $20
    if (total > 20)
        total *= 0.9;

    return total;
}

int main()
{
    std::string order[] = {"Burger", "Pizza", "Hot dog", "Pizza"};
    int n = 4;
    double totalPrice = calculateTotalOrder(order, n);
    std::cout << "Total price for your order: $" << totalPrice << std::endl;
    return 0;
}